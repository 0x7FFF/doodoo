<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/common_google_signin_btn_text_dark_disabled"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@drawable/main_form_layout">

            <ImageView
                android:id="@+id/iv_food"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/relative"
                android:scaleType="fitXY"
                tools:ignore="NotSibling"
                tools:srcCompat="@drawable/eat_1" />

            <ImageButton
                android:id="@+id/ib_name"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/iv_food"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_left"
                android:src="@drawable/icon" />

            <ImageButton
                android:id="@+id/ib_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/iv_food"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="85dp"
                android:background="@drawable/button_left"
                android:src="@drawable/geo_icon" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_food"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="32dp"
                android:text="Mahorin Pizza"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_near_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_food"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="100dp"
                android:text="11 restaurants near you"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_food"
                android:layout_alignParentRight="true"
                android:layout_marginTop="32dp"
                android:layout_marginRight="16dp"
                android:text="48 p."
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <View
                android:id="@+id/item_swipe_left_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:alpha="0"
                android:background="#A5F" />

            <View
                android:id="@+id/item_swipe_right_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:alpha="0"
                android:background="#5AF" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
